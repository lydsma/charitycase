<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/post1title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F3FB"
        android:text="First Name:"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="210dp"></TextView>

    <TextView
        android:id="@+id/post1title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F3FB"
        android:text="Last Name:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="287dp"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="\n\n\n Welcome, $username$! \n\n\n"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004B55"

        android:text="$AppName$   \n ProfileActivity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>