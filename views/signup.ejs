                <%if (message != null) { %>
                    <p><span style="color: red;"><%= message %></span></p>
                <% } %>
            <input type="submit" value="Create account!">
            
         </form>
         </div>
         <div class="div-login">
             <p></p>
			<i><p id="login">Return to login page <a href="/">here!</a></p></i>
