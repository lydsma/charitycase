<html lang="en">

<head>
    <% include ../views/partials/head %>
</head>

<body class="container">
    <header>
        <% include ../views/partials/header %>
    </header>

    <main>
        <div>
        <form action="/account/create" method="post">
            <h4><b><i> Sign Up </i></b></h4>
            <p>
            Name: <input name="name">
            <p>
            Email: <input name="email">
